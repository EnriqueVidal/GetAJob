<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="GetAJob" namespace="GetAJob.Models">
  <class name="Person" table="People" lazy="false">
    <id name="Id" column="id">
      <generator class="native" />
    </id>    
    <property name="FirstName" column="first_name"/>
    <property name="LastName" column="last_name"/>
    
    <many-to-one name="User" unique="true" column="user_id" />
    <one-to-one name="Resume" class="Resume" cascade="all" constrained="true" foreign-key="none" />
  </class>
</hibernate-mapping>