<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true">
  <class name="GetAJob.Persistence.Entities.User, GetAJob.Persistence" table="Users" lazy="false">
    <id name="Id" column="id">
      <generator class="native" />
    </id>    
    <property name="UserName" column="user_name" not-null="true"/>
    <property name="Email" column="email" not-null="true"/>
    <property name="PasswordHash" column="password_hash" not-null="true"/>
    <property name="Salt" column="salt" not-null="true"/>
    
	<one-to-one name="Person" class="GetAJob.Persistence.Entities.Person, GetAjob.Persistence" cascade="all" />
  </class>
</hibernate-mapping>